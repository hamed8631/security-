configure syslog server & mysql & webserver


# yum install httpd
# service httpd start
# chkconfig httpd on
# yum install mysql mysql-server
# service mysqld start 
# chkconfig mysql on 
# mysqladmin -u root password '123456' 
# mysql -u root -p 

